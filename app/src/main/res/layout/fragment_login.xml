<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ui.login.LoginFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_eclipse_top"
            android:layout_width="391.7dp"
            android:layout_height="250.75dp"
            android:layout_marginTop="-120dp"
            android:layout_marginEnd="-100dp"
            android:alpha="0.08"
            android:contentDescription="eclipse"
            android:rotation="11.14"
            android:src="@drawable/eclipse"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_eclipse_top1"
            android:layout_width="391.7dp"
            android:layout_height="250.75dp"
            android:layout_marginStart="-100dp"
            android:layout_marginBottom="-100dp"
            android:alpha="0.08"
            android:contentDescription="eclipse"
            android:rotation="34"
            android:src="@drawable/eclipse"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintHorizontal_bias="0.873"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/img_eclipse_top2"
            android:layout_width="391.7dp"
            android:layout_height="250.75dp"
            android:layout_marginEnd="-250dp"
            android:alpha="0.08"

            android:contentDescription="eclipse"
            android:rotation="11.14"
            android:src="@drawable/eclipse"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Welcome to SawahKu"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_cardview"
            android:layout_width="329dp"
            android:layout_height="386dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/cardview_login"
            android:contentDescription="cardview"
            android:padding="10dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="238dp"
            android:elevation="25dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Login"
            android:textColor="@color/primaryColor"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.darkcoder.paddycure.ui.customview.MyEditTextEmail
            android:id="@+id/edt_email_login"
            android:layout_width="259dp"
            android:layout_height="55dp"
            android:layout_marginTop="40dp"
            android:elevation="30dp"
            android:hint="email"
            android:paddingHorizontal="35dp"
            android:textColor="@color/primaryColor"
            android:textColorHint="@color/primaryColor"
            app:layout_constraintEnd_toEndOf="@id/tv_login"
            app:layout_constraintStart_toStartOf="@id/tv_login"
            app:layout_constraintTop_toBottomOf="@id/tv_login" />

        <com.darkcoder.paddycure.ui.customview.MyEditTextPassword
            android:id="@+id/edt_pass_login"
            android:layout_width="259dp"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:elevation="30dp"
            android:hint="password"
            android:paddingHorizontal="35dp"
            android:textColor="@color/primaryColor"
            android:textColorHint="@color/primaryColor"
            app:layout_constraintEnd_toEndOf="@id/edt_email_login"
            app:layout_constraintStart_toStartOf="@id/edt_email_login"
            app:layout_constraintTop_toBottomOf="@id/edt_email_login" />

        <TextView
            android:id="@+id/tv_forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:elevation="30dp"
            android:fontFamily="@font/poppins_reguler"
            android:text="Forgot Password?"
            android:textColor="@color/greyColor"
            android:textSize="13dp"
            app:layout_constraintEnd_toEndOf="@id/edt_pass_login"
            app:layout_constraintStart_toStartOf="@id/edt_pass_login"
            app:layout_constraintTop_toBottomOf="@id/edt_pass_login" />

        <com.darkcoder.paddycure.ui.customview.MyButtonLogin
            android:id="@+id/btn_login"
            android:layout_width="259dp"
            android:layout_height="50dp"
            android:layout_marginTop="58dp"
            android:elevation="5dp"
            android:fontFamily="@font/poppins_medium"
            android:paddingHorizontal="35dp"
            android:text="Login"
            android:textColor="@color/white"
            android:textColorHint="@color/primaryColor"
            app:layout_constraintEnd_toEndOf="@id/edt_pass_login"
            app:layout_constraintStart_toStartOf="@id/edt_pass_login"
            app:layout_constraintTop_toBottomOf="@id/edt_pass_login" />

        <TextView
            android:id="@+id/tv_donthaveacc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="55dp"
            android:fontFamily="@font/poppins_reguler"
            android:text="Donâ€™t have any account?"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/btn_login"
            app:layout_constraintStart_toStartOf="@id/btn_login"
            app:layout_constraintTop_toBottomOf="@id/btn_login" />

        <TextView
            android:id="@+id/tv_to_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_mediumitalic"
            android:text="@string/to_register"
            android:textColor="@color/primaryColor"
            app:layout_constraintStart_toEndOf="@id/tv_donthaveacc"
            app:layout_constraintTop_toTopOf="@id/tv_donthaveacc" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>